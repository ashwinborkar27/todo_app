<p class="card-text">
  <small class="text-muted">
    <%= link_to "Logout (#{current_user.email})", destroy_user_session_path, :method => :delete ,class:'alert alert-success'%>
  </small>
</p>

<p id="notice"><%= notice %></p>

<h1>task_list</h1>
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th>Selector</th>
      <th colspan="3"> Action</th>
    </tr>
  </thead>

  <tbody>
    <%# raise current_user.inspect%>
    <% @note_task_lists.each do |note| %>
    <%#= raise @notes.inspect%>
    <% #@notes.each do |note| %>
      <tr>
        <td><%= note.name %></td>
        <td><%= note.description %></td>
        <td><%= note.user_id %></td>
        <td><%= note.selector %></td>
        <%#= note.input :selector, collection: enum_collection_for_select(note.selector), selected: @user.selector %>
        <!-- <td><%#= link_to 'report' , class:'btn btn-mini btn-info'%></td>
        <td><%#= link_to 'task', class:'btn btn-mini btn-info'%></td>
        <td><%#= link_to 'personal', class:'btn btn-mini btn-info'%></td> -->
        <td><%= link_to 'Show', note , class:'btn btn-mini btn-info'%> |
        <%= link_to 'Edit', edit_note_path(note), class:'btn btn-mini btn-success' %> |
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
