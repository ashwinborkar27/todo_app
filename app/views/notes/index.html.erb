<p class="card-text">
  <small class="text-muted">
    <%= link_to "Logout (#{current_user.email})", destroy_user_session_path, :method => :delete ,class:'alert alert-success'%>
  </small>
</p>

<p id="notice"><%= notice %></p>

<h1>Notes</h1>
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"> Action</th>
    </tr>
  </thead>

  <tbody>
    <%# raise current_user.inspect%>
    <% @notes.each do |note| %>
    <% #@notes.each do |note| %>
      <tr>
        <td><%= note.name %></td>
        <td><%= note.description %></td>
        <td><%= note.user_id %></td>
        <td><%= link_to 'Show', note , class:'btn btn-mini btn-info'%></td>
        <td><%= link_to 'Edit', edit_note_path(note), class:'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>


<br>
<%= link_to 'New Notes', new_note_path, class:'btn btn-mini btn-warning' %>