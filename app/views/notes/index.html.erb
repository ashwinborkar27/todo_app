<p class="card-text">
  <small class="text-muted">
    <%= link_to "Logout (#{current_user.email})", destroy_user_session_path, :method => :delete ,class:'alert alert-success'%>
  </small>
</p>

<p id="notice"><%= notice %></p>

<h1>Notes</h1>
<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
     <th>Selector</th> 
      <th>Category Type</th>
      <th colspan="8" style ="padding-left: 266px"> Action</th>
    </tr>
  </thead>

  <tbody>
    <%# raise current_user.inspect%>
    <% @notes.each do |note| %>
   
      <tr>
        <td><%= note.name %></td>
        <td><%= note.description %></td>
        <td><%= note.user_id %></td>
        <td><%= note.selector %></td> 
        <td><%= Category.find(note.category_id).name %></td>
        <%#= note.input :selector, collection: enum_collection_for_select(note.selector), selected: @user.selector %>
        <td><%#= link_to 'report' , notes_report_list_path, class:'btn btn-mini btn-info'%></td>
        <td><%#= link_to 'task', notes_task_list_path, class:'btn btn-mini btn-info'%></td>
        <td><%#= link_to 'personal',notes_personal_list_path, class:'btn btn-mini btn-info'%></td>
        <td><%= link_to 'Show', note , class:'btn btn-mini btn-info'%> |
        <%= link_to 'Edit', edit_note_path(note), class:'btn btn-mini btn-success' %> |
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>


<br>
<%= link_to 'New Notes', new_note_path, class:'btn btn-mini btn-warning' %>|
<%= link_to 'report' , report_list_path, class:'btn btn-mini btn-danger'%>|
<%= link_to 'task', task_list_path, class:'btn btn-mini btn-success'%>|
<%= link_to 'personal',personal_list_path, class:'btn btn-mini btn-primary'%>|