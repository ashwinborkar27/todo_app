<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<div class="media">
<div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.user_id %></td>
        <td><%= link_to 'Show', category, class:'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Edit', edit_category_path(category),class:'btn btn-mini btn-info'%></td>
        <td><%= link_to 'Destroy', category, class:'btn btn-mini btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

